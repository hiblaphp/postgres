{
    "name": "hiblaphp/postgres",
    "description": "High Performance Pure Non Blocking Postgre Driver",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Hibla\\Postgres\\": "src/"
        }
    },
     "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "hiblaphp/event-loop": "dev-main",
        "hiblaphp/promise": "dev-main",
        "hiblaphp/async": "dev-main",
        "amphp/postgres": "^2.1"
    },
      "require-dev": {
        "laravel/pint": "^1.10",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "hiblaphp/task": "dev-main"
    },
      "scripts": {
        "test": "./vendor/bin/pest",
        "format": "./vendor/bin/pint",
        "format-test": "./vendor/bin/pint --test",
        "analyze": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
